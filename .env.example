# For Docker Compose
DATABASE_URL=postgresql+asyncpg://ideauser:ideapass@db:5432/ideadb
APP_ENV=dev
LOG_LEVEL=INFO

# For local dev (uncomment if running Postgres locally)
# DATABASE_URL=postgresql+asyncpg://ideauser:ideapass@localhost:5432/ideadb

# CORS origins: comma-separated list
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Security
SECRET_KEY=change-this-in-prod
ACCESS_TOKEN_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Email settings
SENDGRID_API_KEY=your-real-api-key
MAIL_FROM=no-reply@yourdomain.com
MAIL_FROM_NAME=Idea Manager
EXTERNAL_BASE_URL=http://localhost:8000   # public URL of your API used in links
EMAIL_ENABLED=true                        # guard switch (true/false)   