# ---- PROD (copy to .env.prod and fill in) ----
APP_ENV=production
LOG_LEVEL=INFO

# DB – app connects to the "db" service on the docker network
POSTGRES_USER=ideauser
POSTGRES_PASSWORD=strong-db-password-here
POSTGRES_DB=ideadb
DATABASE_URL=postgresql+asyncpg://ideauser:${POSTGRES_PASSWORD}@db:5432/ideadb

# Auth
SECRET_KEY=GENERATE_A_LONG_RANDOM_STRING
ACCESS_TOKEN_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS + URLs (adjust if you’ll use a separate frontend host)
BACKEND_CORS_ORIGINS=https://eddyb.dev,https://app.eddyb.dev
EXTERNAL_BASE_URL=https://api.eddyb.dev
FRONTEND_BASE_URL=https://eddyb.dev

# Email (start disabled; switch true + SendGrid when ready)
EMAIL_ENABLED=false
SENDGRID_API_KEY=
MAIL_FROM=no-reply@eddyb.dev
MAIL_FROM_NAME=Idea Manager

# Don’t run migrations automatically in prod
MIGRATE_ON_START=false

# Docs
ENABLE_DOCS=false
ALLOWED_HOSTS=127.0.0.1,localhost,api.eddyb.dev

# Cookies
COOKIE_SESSION_NAME=im_access
COOKIE_SECURE=true            # true in prod (served over HTTPS)
COOKIE_SAMESITE=lax            # strict|lax (use lax for email link flows)
COOKIE_MAX_AGE_SECONDS=3600